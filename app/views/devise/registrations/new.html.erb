<div class="login-form">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="top">
      <!-- <img src="img/kode-icon.png" alt="icon" class="icon"> -->
      <h1>OPTIMA</h1>
      <h4>Panel Administrativo</h4>
    </div>

    <div class="form-area">

      <% if flash[:alert] %>

        <div class="notification">
          <div class="kode-alert alert6">
            <a href="#" class="closed">×</a>
            <%= flash[:alert] %>
          </div>
        </div>

      <% end %>

      <div class="group">
        <%= f.text_field :username, autofocus: true, class: "form-control", :placeholder => "Nombre de usuario" %>
        <i class="fa fa-user"></i>
      </div>

      <div class="group">
        <%= f.email_field :email, autofocus: true, class: "form-control", :placeholder => "ingresa tu email" %>
        <i class="fa fa-envelope-o"></i>
      </div>

      <div class="group">
        <%= f.password_field :password, autocomplete: "off", class: "form-control", :placeholder => "Contraseña" %>
        <i class="fa fa-key"></i>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
      </div>

      <div class="group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", :placeholder => "Contraseña" %>
        <i class="fa fa-key"></i>
      </div>

      <div class="actions">
        <%= f.submit "Regístrate" , class: "btn btn-default btn-block" %>
      </div>
  <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
